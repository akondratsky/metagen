{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "types": ["bun-types"],
    "strict": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules"]
}